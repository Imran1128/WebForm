@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Manage Users</h1>
        
    </div>
    
    <div class="d-flex flex-wrap justify-content-start mb-3">
        <button id="BlockBtn" class="btn btn-outline-danger me-2 mb-2">
            <i class="fas fa-ban"></i> Block
        </button>
        <button id="UnBlockBtn" class="btn btn-outline-success me-2 mb-2">
            <i class="fas fa-unlock-alt"></i> Unblock
        </button>
        <button id="deleteBtn" class="btn btn-outline-danger me-2 mb-2">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <button id="MakeAdmin" class="btn btn-outline-primary me-2 mb-2">
            Make Admin
        </button>
        <button id="RemoveFromAdmin" class="btn btn-outline-secondary mb-2">
            Remove From Admin
        </button>
    </div>

    <div class="row">
        <div class="col-12">
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="select-all" onclick="toggleSelectAll()" /></th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Users.js"></script>
}
