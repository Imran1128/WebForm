@{
    ViewBag.Title = "Thank You!";
}

<style>
    .thank-you-message {
        background-color: #f7f9fc;
        padding: 50px;
        text-align: center;
        border-radius: 10px;
        max-width: 600px;
        margin: 50px auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        font-family: 'Arial', sans-serif;
    }

    .thank-you-message h2 {
        font-size: 36px;
        color: #4CAF50;
        margin-bottom: 20px;
    }

    .thank-you-message p {
        font-size: 18px;
        color: #333;
        margin-bottom: 30px;
    }

    .thank-you-message a {
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        padding: 15px 30px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .thank-you-message a:hover {
        background-color: #0056b3;
    }

    .thank-you-message .icon {
        font-size: 80px;
        color: #4CAF50;
        margin-bottom: 20px;
    }

    .thank-you-message .card {
        display: inline-block;
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        width: 100%;
        text-align: center;
    }

    
</style>

<div class="thank-you-message card">
    <div class="icon">
        <i class="fas fa-check-circle"></i>
    </div>
    <h2>Thank You for Your Submission!</h2>
    <p>Your responses have been successfully submitted.</p>
    <p>If you'd like to fill out another form, feel free to go back and choose a new one.</p>
    <a href="@Url.Action("Index", "Forms")" class="btn btn-primary">Go Back to Home</a>
</div>

