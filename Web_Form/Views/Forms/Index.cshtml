@model IEnumerable<Web_Form.Models.TblForm>

@{
    ViewData["Title"] = "Forms";
}

<div class="container my-5">
    <!-- Header Section -->
    <div class="text-center">
        <h1 class="text-primary fw-bold">Forms Dashboard</h1>
        <p class="text-muted">Manage all your forms with ease.</p>
        <a class="btn btn-primary btn-lg shadow" asp-controller="Forms" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Create New Form
        </a>
    </div>

    <!-- Forms Section -->
    <div class="row mt-5">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <a asp-controller="Forms" asp-action="Details" asp-route-FormId="@item.FormId" class="card shadow-sm border-0 text-decoration-none"> 
                        <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text text-muted small">
                            <strong>Description:</strong> @Html.DisplayFor(modelItem => item.Description)<br>
                            <strong>Created On:</strong> @Html.DisplayFor(modelItem => item.CreatedOn)<br>
                            <strong>Author:</strong> @Html.DisplayFor(modelItem => item.Createdby)
                        </p>
                        </a>
                        @* <div class="d-flex justify-content-between">
                            @* <a class="btn btn-outline-info btn-sm" asp-action="Edit" asp-route-id="@item.FormId">
                                <i class="bi bi-pencil-square"></i> *@ 
                            @* </a> *@
                            @* <a class="btn btn-outline-secondary btn-block" asp-action="Details" asp-route-FormId="@item.FormId">
                                <i class="bi bi-info-circle"></i> Details
                            </a> *@
                            @* <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.FormId" onclick="return confirm('Are you sure you want to delete this form?')">
                                <i class="bi bi-trash"></i>
                             </a> *@
                        @* </div> *@
                    </div>
                </div>
            </div>
        }
    </div>
</div>

