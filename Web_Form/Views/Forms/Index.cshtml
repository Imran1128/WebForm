@model FullFormViewModel

@{
    ViewData["Title"] = "Forms";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">Forms Dashboard</h1>
        <p class="text-muted lead">Manage, fill, and explore all your forms effortlessly.</p>
        <a class="btn btn-primary btn-lg shadow-lg rounded-pill px-4 py-2" asp-controller="Forms" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Create New Form
        </a>
    </div>

    <div class="container mt-5">
        
        <div class="row">
            <h2 class="fw-bold text-primary mb-4 col-12">Latest Templates</h2>
            <hr class="col-12 mb-4" />
            <div id="latest-forms" class="row">
              
            </div>
        </div>

       
        <div class="row mt-5">
            <h2 class="fw-bold text-primary mb-4 col-12">Popular Templates</h2>
            <hr class="col-12 mb-4" />
            <div id="popular-forms" class="row">
               
            </div>
        </div>
    </div>

        
        <div class="container">
           
            <div class="mb-4">
                <label for="tagSelect" class="form-label">
                    <h2 class="fw-bold text-primary mt-5 mb-4 text-center"><i class="fas fa-tags"></i> Select Tags</h2>
                    
                </label>
                <select asp-items="Model.tblTags" name="tags[]" multiple="multiple" id="tagSelect" class="tags form-select" style="width: 100%; max-width: 600px;">
                </select>
            </div>

            
            <div id="formByTag" class="row g-4">
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/index.js"></script>


}
