@{
    ViewData["Title"] = "Submitted Forms";
}

<div class="container ">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="display-4">Submitted Forms</h1>
        <p class="lead text-muted">Browse and manage all submitted forms efficiently.</p>
    </div>

    <!-- Table Card -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Forms Overview</h3>
        </div>
        <div class="card-body">
            <table id="answeredFormsTable" class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Form Title</th>
                        <th>Created By</th>
                        <th>Answered By</th>
                        <th>Submission Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be populated by AJAX -->
                </tbody>
            </table>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        // Initialize DataTable
        $('#answeredFormsTable').DataTable({
            ordering: false,
            responsive: true, // Make the table responsive
            "ajax": {
                "url": '/forms/submittedFormsapi',
                "method": "GET",
                "datatype": "json",
                "async": true,
                "dataSrc": function (json) {
                    console.log("Response Data:", json);  // Log the data returned from the server
                    return json;  // Ensure this returns the user data array
                },
            },
            "columns": [
                {
                    data: 'title',
                    name: "Form Title"
                },
                {
                    data: 'createdBy',
                    name: "Created By"
                },
                {
                    data: 'submittedBy',
                    name: "Answered By"
                },
                {
                    data: 'submissionDate',
                    name: "Submission Date",
                    render: function (data, type, row) {
                        if (type === 'display' || type === 'filter') {
                            const date = new Date(data);
                            return date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
                        }
                        return data; // Unformatted for sorting and other operations
                    }
                },
                {
                    data: 'uniqueId', // This column doesn't use a field from the dataset
                    name: "Actions",
                    render: function (data, type, row) {
                        return `
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary btn-sm me-2 mr-2" onclick="viewForm('${data}')">
                                        <i class="fas fa-eye"></i> View
                                    </button>
                                    <button class="btn btn-warning btn-sm" onclick="editForm('${data}')">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                </div>
                            `;
                    }
                }
            ]
        });
    });

    // JavaScript functions for View and Edit actions
    function viewForm(uniqueId) {
        window.location.href = `/forms/ViewResponse/?uniqueId=${uniqueId}`;
    }

    function editForm(uniqueId) {
        window.location.href = `/forms/editResponse/?uniqueId=${uniqueId}`;
    }
</script>

