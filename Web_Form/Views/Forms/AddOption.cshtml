@model FullFormViewModel

<div id="Options" class="container mt-4">
    @if (Model.tblQuestionOptionList.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Options</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @for (var i = 0; i < Model.tblQuestionOptionList.Count; i++)
                    {
                        <div class="mb-4 question-item" data-question-id="@i">
                            <!-- Question Header -->
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="fw-bold">Option @(@i + 1):</h5>
                            </div>

                            <!-- List Item with Radio Buttons -->
                        <li class="list-group-item">
                            <input type="radio" name="selectedOption" value="@Model.tblQuestionOptionList[i].OptionId"
                                   id="option-@i" class="form-check-input" required />
                            <label for="option-@i">
                                <i class="bi bi-check-circle text-success"></i>
                                    @Model.tblQuestionOptionList[i].OptionText
                            </label>
                        </li>
                </div>
                    }
            </ul>
            <!-- Error message for validation -->
            <div id="optionsError" class="text-danger mt-2" style="display: none;">
                Please select an option.
            </div>
        </div>
    </div>
    }
    else
    {
    <div class="alert alert-info" role="alert">
        No Option added yet!
    </div>
    }
</div>

