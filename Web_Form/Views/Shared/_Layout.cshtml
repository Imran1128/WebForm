<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_Form</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        rel="stylesheet"
    />


    <style>
        body {
            font-family: 'Arial', sans-serif;
          
        }

        header {
           /*  background: linear-gradient(90deg, #6200ea, #3700b3); */
            color: white;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.8rem;
            color: black !important;
        }

        .nav-link {
            color:black !important;
            margin-right: 10px;
        }

            .nav-link:hover {
                color: #bb86fc !important;
            }

        .logout-btn {
            background-color: #6c757d;
            color: white;
            border: none;
            font-size: 0.9rem;
            padding: 5px 10px;
        }

            .logout-btn:hover {
                background-color: #5a6268;
            }

        footer {
            background-color: #6200ea;
            color: white;
            padding: 1rem 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <!-- Left Side: Title and Navigation Buttons -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand me-3" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-kanban-fill"></i> Web Form
                    </a>
                    
                </div>

                <!-- Right Side: User Info and Logout -->
                <partial name="_LoginPartial.cshtml" />
            </div>
        </nav>
    </header>

    <!-- Main Container -->
    <div class="container" style="  min-height:800px">
        <main role="main" class="pb-3">
            @RenderBody()

            <!-- Add this line to prevent errors for missing sections -->
            @if (IsSectionDefined("Scripts"))
            {
                @RenderSection("Scripts", required: false)
            }
        </main>
    </div>
    


    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 - Web_Form - <a href="#" class="text-decoration-none text-light">Privacy</a></p>
            <div>
                <i class="bi bi-facebook me-2"></i>
                <i class="bi bi-twitter me-2"></i>
                <i class="bi bi-instagram"></i>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Form.js"></script>
</body>
</html>





   
